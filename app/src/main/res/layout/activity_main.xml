<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="185dp"
        android:layout_height="83dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="479dp"
        android:text="Location: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/eventTimeText"
        android:layout_width="183dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="646dp"
        android:text="Event Time: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/cellTechText"
        android:layout_width="198dp"
        android:layout_height="79dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="215dp"
        android:layout_marginBottom="641dp"
        android:text="Cell Technology: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/cellLocationText"
        android:layout_width="215dp"
        android:layout_height="76dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="579dp"
        android:text="Cell Location: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/signalQualityText"
        android:layout_width="219dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="373dp"
        android:text="Signal Quality: "
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_open_map"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="126dp"
        android:layout_marginBottom="296dp"
        android:text="Open Map" />

    <Button
        android:id="@+id/btn_stop_insertion"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="196dp"
        android:text="Stop Insertion" />

</RelativeLayout>
